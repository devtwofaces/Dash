<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_edit_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="task"
            android:hint="Task Info"
            android:backgroundTint="@color/dark_theme_text"
            android:textColorHint="@color/dark_grey"
            android:inputType="text"
            android:textColor="@color/dark_theme_text" />

        <CheckBox
            android:id="@+id/important_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Important"
            android:textColor="@color/dark_theme_text" />

        <TextView
            android:id="@+id/tasK_date_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Created on: "
            android:textColor="@color/dark_theme_text" />

    </LinearLayout>

    <Button
        android:id="@+id/add_new_task"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="25dp"
        android:background="@drawable/checked_512"
        app:backgroundTint="@null"
        app:layout_dodgeInsetEdges="bottom" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>